%h1 Show Previous Orders
%table#order_table{style: "width:100%", class: "table table-striped"}
	%thead
		%tr
			%th Store Image
			%th Store Name
			%th Order ID
			%th Purchased Time
			%th
	%tbody
		-@table.each do |e|
			-s = Store.find(e["store_id"])
			%tr
				%td
					%img.p-1{alt: "Image", height: "75", width: "75", src: s.img_src}
				%td
					%a{href: "/visitStore/#{e["store_id"]}"}=s.storeName
				%td= e["order_id"]
				%td= e["purchased_time"]
				%td
					%a{href: "/showSpecificOrder/#{e["order_id"]}"}More About This Order


:javascript
	console.log("test")
	$(document).ready( function () {
		$('#order_table').DataTable();
	} );